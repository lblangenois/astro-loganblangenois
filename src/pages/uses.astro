---
import Footer from "../components/elements/footer";
import Header from "../components/elements/header";
import BaseLayout from "../components/layouts/base";

// Read markdown file
const post = await Astro.glob("../data/uses.md");

const obj = Object.assign({}, ...post);
let { Content } = obj;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>What I use? | Logan Blangenois</title>
		<meta
			name="description"
			content="The list of what I'm using (hardware and software) for my job of Front-end developper."
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/favicon/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon/favicon-16x16.png"
		/>
		<link rel="manifest" href="/favicon/manifest.json" />
		<link
			rel="mask-icon"
			href="/favicon/safari-pinned-tab.svg"
			color="#2ecc71"
		/>
		<link rel="shortcut icon" href="/favicon/favicon.ico" />
		<meta name="msapplication-TileColor" content="#2ecc71" />
		<meta name="msapplication-config" content="/favicon/browserconfig.xml" />
		<meta name="theme-color" content="#ffffff" />
	</head>

	<BaseLayout>
		<Header isHome={false} />

		<div class="px-6 md:px-20 xl:px-4 py-12 relative z-20">
			<main class="mx-auto max-w-[980px] prose">
				<Content />
			</main>
		</div>
		<Footer />
	</BaseLayout>


</html>
